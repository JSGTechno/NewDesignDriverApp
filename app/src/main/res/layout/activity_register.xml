<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg_img"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:id="@+id/fleetTechTv"
        style="@style/TextViewRegularStyle"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/_80sdp"
      android:src="@drawable/fleetech_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/verifyNoTv"
        style="@style/TextViewRegularStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/verifing_mobile_number_for_otp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fleetTechTv" />

  <LinearLayout
      android:id="@+id/regiterly"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_160sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/fleetTechTv">

      <TextView
          style="@style/TextViewRegularStyle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="30dp"
          android:gravity="start|center"
          android:text="WELCOME TO"
          android:textSize="16sp" />

      <ImageView
          android:layout_width="@dimen/_100sdp"
          android:layout_height="20dp"
          android:layout_marginStart="30dp"
          android:src="@drawable/fleetechapp_reg_logo" />


      <TextView
        android:id="@+id/enternoTv"
        style="@style/TextViewRegularStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:gravity="start|center"
        android:text="Please Register here"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextPhone"
        style="@style/TextViewRegularStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:ems="10"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="start|center"
        android:hint="Enter your Mobile No."
        android:inputType="phone"
        android:maxLength="10"
        android:padding="4dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enternoTv" />

  </LinearLayout>
    <Button
        android:id="@+id/button"
        style="@style/TextViewSemiBoldStyle"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/register_rounded_btn"
        android:gravity="center"

        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:layout_marginStart="@dimen/_75sdp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textAllCaps="false"
        android:text="Check Your Availability "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regiterly" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>
